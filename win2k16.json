{
  "builders": [
    {
      "type": "null",
      "communicator": "none"
    },
    {
      "vm_name": "vagrant-w2016",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
      ],
      "guest_additions_mode": "upload",
      "guest_os_type": "Windows2016_64",
      "headless": true,
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "output_directory": "output-win2k16-virtualbox-iso",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "post_shutdown_delay": "5m",
      "floppy_files": [
        "./tmp/Autounattend.xml",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/oracle-cert.cer"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "powershell -NoProfile -ExecutionPolicy unrestricted -File ./scripts/product-key.ps1 {{ user `autounattend` }} {{ user `win2016_key` }}",
      "only": ["null"],
      "only_on": "windows"
    },
    {
      "type": "shell-local",
      "command": "sh ./scripts/product-key.sh {{ user `autounattend` }} {{ user `win2016_key` }}",
      "only": ["null"],
      "only_on": "linux"
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/strong-crypto.ps1"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/chocolatey.bat",
        "./scripts/chocopacks.bat"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/debloat-windows.ps1"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "valid_exit_codes": [0, 1641, 3010],
      "scripts": [
        "./scripts/installnet4.bat"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "windows-restart",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/uac-enable.bat",
        "./scripts/compact.bat"
      ],
      "only": ["virtualbox-iso"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "Win2k16-{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016.template",
      "only": ["virtualbox-iso"]
    }
  ],
  "variables": {
    "iso_url": "./iso/en_windows_server_2016_updated_feb_2018_x64_dvd_11636692.iso",
    "iso_checksum": "e8adeebcd8076702593469e33cc2d092",
    "autounattend": "./answer_files/2016/Autounattend.xml",
    "cpus": "4",
    "memory_size": "8192",
    "disk_size": "61440"
  }
}