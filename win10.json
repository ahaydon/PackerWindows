{
  "builders": [
    {
      "type": "null",
      "communicator": "none"
    },
    {
      "vm_name": "vagrant-win10",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
      ],
      "guest_additions_mode": "upload",
      "guest_os_type": "Windows10_64",
      "headless": true,
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "output_directory": "output-win10-virtualbox-iso",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "post_shutdown_delay": "5m",
      "boot_wait": "2m",
      "floppy_files": [
        "./tmp/Autounattend.xml",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/oracle-cert.cer",
        "./scripts/fixnetwork.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "powershell -NoProfile -ExecutionPolicy unrestricted -File ./scripts/product-key.ps1 {{ user `autounattend` }} {{ user `win10_key` }}",
      "only": ["null"],
      "only_on": "windows"
    },
    {
      "type": "shell-local",
      "command": "sh ./scripts/product-key.sh {{ user `autounattend` }} {{ user `win10_key` }}",
      "only": ["null"],
      "only_on": "linux"
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/strong-crypto.ps1"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/disable-auto-logon.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/chocolatey.bat",
        "./scripts/chocopacks.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/compact.bat"
      ],
      "only": ["virtualbox-iso"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows-10-{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile-windows_10.template",
      "only": ["virtualbox-iso"]
    }
  ],
  "variables": {
    "iso_url": "./iso/en-gb_windows_10_business_editions_version_1909_updated_july_2020_x64_dvd_c079f821.iso",
    "iso_checksum": "A3E152F013F6B00D3A2D9A4EAEB2360185D85EE76DAE1E3ADFDEC43EF49A2FCC",
    "autounattend": "./answer_files/10/Autounattend.xml",
    "cpus": "2",
    "memory_size": "2048",
    "disk_size": "61440"
  }
}
